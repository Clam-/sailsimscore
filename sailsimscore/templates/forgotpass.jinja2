{% from "macros.jinja" import text_box, with context %}
{% extends 'layout.jinja2' %}

{% block title %}Login - Forgot Password {% endblock title %}

{% block content %}
<h1>Forgot Password</h1>
<form action="{{ url }}" method="post">
<input type="hidden" name="next" value="{{ next_url }}">
{{ text_box("Email", "email", login) }}
<div class="form-group">
    <button type="submit" name="form.submitted" value="Reset" class="btn btn-primary">Reset</button>
</div>
</form>
{% endblock content %}
